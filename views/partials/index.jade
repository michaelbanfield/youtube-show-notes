div.span8.offset2(ng-show='setVideoView')
  div.hero-unit#orange-hero
    div.row
      div.span8
        h1 Enter a Youtube URL
        div.input-append
          input.span4.offset2(type = "text", ng-model="videoID", placeholder="Enter video ID here")
          button.btn.btn-success(ng-show='setVideoView', ng-click= 'setVideo()') Set video
a.btn.btn-primary.btn-large(ng-hide='setVideoView', ng-click='setPath()') Save Shownotes
div.videoframe
div.input-prepend(ng-hide='noteView || setVideoView')
  span.add-on @time(seconds)
  a.btn.btn-primary(ng-click='addNote()') Add Note
div(ng-hide='setVideoView || !noteView')
  div.input-prepend.input-append
    span.add-on @{{currentTime}}
    input.span2(ng-model='form.note', ng-focus='pauseVideo()', type='text')
    button.btn.btn-success(ng-click='submitPost()') Submit Post

div(ng-repeat='post in data.posts', ng-hide= 'setVideoView')
  div.input-prepend
    button.btn(ng-click='changeStart(post.time)') @{{post.time}}
    input(value='{{post.note}}', type='text', disabled) {{post.note}}
